<h1>New post</h1>

<%= form_for @post do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :content %>
    <%=f.text_area :content %>

    <h3>Select a tag for your post:</h3>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br />

    <%= f.submit %>
<% end %>

<%= link_to 'Back', posts_path %>
